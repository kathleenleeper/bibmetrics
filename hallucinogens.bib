issn = {1534-7362},
journal = {Journal of vision},
keywords = {Contrast Sensitivity,Humans,Illusions,Illusions: physiology,Light,Models, Psychological,Motion Perception,Neurons, Afferent,Neurons, Afferent: physiology,Photic Stimulation,Photic Stimulation: methods,Time Factors},
month = {jan},
number = {11},
pages = {1055--69},
pmid = {16441202},
title = {{Illusory motion from change over time in the response to contrast and luminance.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/16441202},
volume = {5},
year = {2005}
}

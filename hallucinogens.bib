issn = {0091-3057},
journal = {Pharmacology, biochemistry, and behavior},
keywords = {Adenylate Cyclase,Adenylate Cyclase: metabolism,Animals,Humans,Receptors, Serotonin,Receptors, Serotonin: chemistry,Receptors, Serotonin: classification,Receptors, Serotonin: drug effects,Receptors, Serotonin: genetics},
